upstream php-fpm {
    server unix:/var/run/php/php7.0-fpm.sock;
}

server {
    listen 3000;
    root /vagrant/www/app/;
    index frontend.html;
    server_name localhost;

    location ~ "^/backend/.*$"
    {
        try_files $uri /server.php /server.php =404;
        include common/php-fpm;
    }

    location ~ "^/api-docs/.*$"
    {
        rewrite ^/api-docs/(.*)$ /../../../swagger/swagger-ui/dist/$1 break;
        index index.html;
    }


}