{
  "swagger": "2.0",
  "info": {
    "version": "0.0.0",
    "title": "CASS API"
  },
  "tags": [
    {
      "name": "square",
      "description": "Square Service"
    },
    {
      "name": "theme-editor",
      "description": "Theme Editor Service"
    }
  ],
  "paths": {
    "/backend/api/square/calculate/{input}": {
      "get": {
        "tags": [
          "square"
        ],
        "description": "Возвращает квадрат от числа\n",
        "parameters": [
          {
            "name": "input",
            "in": "path",
            "description": "Число, которое нужно возвести в квадрат\n",
            "required": true,
            "type": "number",
            "format": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "required": [
                "success"
              ],
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "error": {
                  "type": "string"
                },
                "result": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "/backend/api/protected/host-admin/theme-editor/entity/create/": {
      "put": {
        "tags": [
          "theme-editor"
        ],
        "description": "Создает новую тематику в текущем хосте\n",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Название тематики"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull response\n",
            "schema": {
              "type": "object",
              "required": [
                "id",
                "success"
              ],
              "properties": {
                "id": {
                  "type": "number",
                  "description": "ID созданной темы"
                },
                "success": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}