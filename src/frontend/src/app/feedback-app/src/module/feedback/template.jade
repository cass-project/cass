.container-fluid
  .row.row-offcanvas.row-offcanvas-left
    .col-md-3.col-lg-2.sidebar-offcanvas.p-l-0(role='navigation')
      cass-feedback-landing-sidebar
    .col-md-9.col-lg-10.main
      cass-feedback-landing-sidebar-toggler

      nav(*ngIf="getPages().length>1")
        ul.pagination
          li.page-item(*ngIf="curPage>1")
            a.page-link(aria-label='Previous', [routerLink] = "['FeedbackPage',{page:curPage-1}]")
              span(aria-hidden='true') «
              span.sr-only Previous
          li.page-item(
            *ngFor="#page of getPages()",
            [ngClass]="{'active': page.index==curPage}"
          )
            a.page-link([routerLink]="['FeedbackPage',{page:page.index}]")
              | {{page.index}}
          li.page-item(*ngIf="curPage<getPages().length")
            a.page-link(aria-label='Next', [routerLink] = "['FeedbackPage',{page:curPage+1}]")
              span(aria-hidden='true') »
              span.sr-only Next
      
      .card-columns
        cass-feedback-card(
          *ngFor="#feedback of feedbacks",
          [feedback]="feedback"
        )
.screen-loading(
  *ngIf="isLoading"
)