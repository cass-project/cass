.cass-sidebar
  .sidebar-contents
    ul.sidebar-items
      li
        a.sidebar-item(routerLink='home')
          div.image
            i.fa.fa-home
          span.title {{ "sidebar.item.home.title" | translate }}
      li(*ngIf="! isSignedIn()")
        a.sidebar-item(href='javascript:void(0);', (click)="signIn()")
          div.image
            i.fa.fa-user
          span.title {{ "sidebar.item.profile.title" | translate }}
      li(*ngIf="isSignedIn()")
        a.sidebar-item(routerLink='profile')
          div.image
            i.fa.fa-user
          span.title {{ "sidebar.item.profile.title" | translate }}
      li
        a.sidebar-item(routerLink='people')
          div.image
            i.fa.fa-users
          span.title {{ "sidebar.item.people.title" | translate }}
      li
        a.sidebar-item(routerLink='collections')
          div.image
              i.fa.fa-th-large
          span.title {{ "sidebar.item.collections.title" | translate }}
      li
        a.sidebar-item(routerLink='communities')
          div.image
            i.fa.fa-hashtag
          span.title {{ "sidebar.item.communities.title" | translate }}
      li(*ngIf="isSignedIn()")
        a.sidebar-item(href="javascript:void(0)", (click)="signOut()")
          div.image
            i.fa.fa-power-off
          span.title {{ "sidebar.item.sign-out.title" | translate }}