div.component.component-change-backdrop-modal
  header.form-header
    h1 {{ "backdrop.change.title" | translate }}
  nav.cbm-navigation
    ul.tabs
      li.tab
        button.active(type="button", (click)="switchTab('image')", [ngClass]="{'active': isOn('image')}")
          span.title {{ "backdrop.change-modal.tab.image" | translate }}
      li.tab
        button(type="button", (click)="switchTab('palette')", [ngClass]="{'active': isOn('palette')}")
          span.title {{ "backdrop.change-modal.tab.palette" | translate }}
  div.current-screen
    div(*ngIf="isOn('image')")
      cass-change-backdrop-cmp-image-settings
    div(*ngIf="isOn('palette')")
      cass-change-backdrop-cmp-palette-browser
  footer.form-footer
    .form-footer-section
      .cass-padding-box-5
        button.form-text-button(type='button', (click)='close()')
          span {{ "cancel" | translate }}
    .form-footer-section
      .form-footer-item
        .cass-padding-box-5
          button.form-button.form-button-primary(type='save()')
            span {{ "save-changes" | translate }}
