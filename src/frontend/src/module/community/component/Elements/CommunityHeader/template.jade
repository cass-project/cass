article.component-profile-header
  .profile-header-section
    .profile-brand-container
      .profile-image-container
        cass-profile-image([url]="getImageURL()", border = "circle")
      .profile-greetings
        span {{ getCommunityTitle() }}
    .collection-list-container
        ul.collection-links
          li
            a([routerLink]="['./Dashboard']", class="collection-link")
              span Профиль
          li(*ngFor="#collection of entity.collections")
            a([routerLink]="['./Collections/View', { sid: collection.sid }]", class="collection-link", title="{{ collection.description }}")
              span {{ collection.title }}
          li((click)='modals.createCollection.open()')
            a(*ngIf="isOwnCommunity()", class="collection-link collection-link-icon")
              i.fa.fa-plus-circle
  .profile-header-section
    .profile-buttons-container
      ul.profile-buttons
        li
          a.profile-button([routerLink]="['./Collections']")
            i.fa.fa-fw.fa-bookmark
            span Подборки
        li(*ngIf="isOwnCommunity()")
          .profile-button((click)='modals.settings.open()')
            i.fa.fa-fw.fa-cog
            span Настройки