div.component.component-community-card-grid
  a((click)="open($event)", [routerLink]="helper.getRouterParams()")
    .cover-community-image
      .community-image-container(style="background-image: url('{{ helper.getImageURL() }}');")
    .cover-community-about
      .community-name
        h1 {{ helper.getCommunityTitle() }}
      .community-themes
        ul.themes-list(*ngIf="helper.hasTheme()")
          li
            span.title {{ helper.getThemeTitle() }}
