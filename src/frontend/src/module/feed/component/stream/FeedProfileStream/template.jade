article.component.component-feed-profile-stream
  div(*ngIf="hasStream()")
    .entities
      .profile-card-container(*ngFor="let profile of feed.stream.all()")
        cass-profile-card([profile]="profile", [view-option]="getViewOption()")
      .loading-indicator
        cass-loading-indicator(*ngIf="feed.isLoading()")
  div(*ngIf="!feed.isLoading()")
    cass-feed-scroll-detector