article.component.component-feed-post-stream
  div(*ngIf="hasStream()")
    .entities
      .post-card-container(*ngFor="#post of feed.stream.all()")
        cass-post-card([post]="post", [view-option]="getViewOption()")
      .loading-indicator
        cass-loading-indicator(*ngIf="feed.isLoading()")
  div(*ngIf="!feed.isLoading()")
   button(class="form-button form-button-remove", id='FeedUpdateButton')
    span '...'