article.component.component-feed-collection-stream
  div(*ngIf="hasStream()")
  .entities
    .collection-card-container(*ngFor="let collection of feed.stream.all()")
      cass-collection-card([entity]="collection", [view-option]="getViewOption()")
    .loading-indicator
      cass-loading-indicator(*ngIf="feed.isLoading()")
  div(*ngIf="!feed.isLoading()")
    cass-feed-scroll-detector