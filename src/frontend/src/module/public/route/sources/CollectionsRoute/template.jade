div.route.route-public-collections
  .flexbox-container
    .themes-list
      cass-theme-panel([root]="helper.themes.getCurrentTheme()", (change)="helper.goTheme($event)")
    .menu
      cass-public-collections-menu
    .content(#content, (scroll)="onScroll($event)")
      div.theme-header
        cass-theme-header([theme]="helper.themes.getThemeRoot()", (go)="helper.goTheme($event)")
      div.container-button-right
        cass-form-button(styles="solid",type="button" ,title="Создать тематическую подборку", color="green",(click)="openCreateCollectionModal()" )
      router-outlet