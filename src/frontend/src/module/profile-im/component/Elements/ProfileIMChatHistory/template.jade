ul.chatlog
  li(
    *ngFor="#message of history",
    class="{{message.send_status.status}}"
  )
    img.avatar(src="{{message.author.image.variants['64'].public_path}}")
    .message
      .from {{message.author.greetings.greetings}}
        small &nbsp;{{dateFormat(message.date_created, "dd.MM\yyyy, Ð² HH:mm:ss") }}
      .text {{message.content}}