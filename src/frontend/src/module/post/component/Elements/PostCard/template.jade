article.component.component-post-card
  div(*ngIf="isViewMode('feed')")
    cass-post-card-feed(
      [post]="post",
      [view-mode]="viewMode",
      (open-post)="openPost($event)",
      (open-attachment)="openAttachment($event)",
    )
  div(*ngIf="isViewMode('grid')")
    cass-post-card-grid(
      [post]="post",
      [view-mode]="viewMode",
      (open-post)="openPost($event)",
      (open-attachment)="openAttachment($event)",
    )
  div(*ngIf="isViewMode('list')")
    cass-post-card-list(
      [post]="post",
      [view-mode]="viewMode",
      (open-post)="openPost($event)",
      (open-attachment)="openAttachment($event)",
    )