form.form.form-auth-sign-in((ngSubmit)='submit()', (keyup.escape)='close()')
  cass-form-progress-lock(*ngIf="status.isLoading()")
  header.form-header
    h1 Авторизация
  .cass-padding-box-10
    .input-group
      p.form-text Войдите с помощью социальных сетей:
      .cass-padding-box-5
        cass-auth-oauth2
    .input-group
      label.form-label
        span.label-text Либо используйте аккаунт нашего сервиса:
        input.form.form-input(
          #emailInput
          type='email',
          required='',
          placeholder='Адрес электронного ящика, указанного при регистрации',
          autocomplete='off', autofocus='autofocus',
          tabindex='1',
          [ngModelOptions]="{standalone: true}", [(ngModel)]='model.email',
        )
    .input-group
      label.form-label
        span.label-text Пароль
        input.form.form-input(
          type='password',
          required='',
          placeholder='**********',
          autocomplete='off',
          tabindex='2',
          [ngModelOptions]="{standalone: true}", [(ngModel)]='model.password',
        )
  footer.form-footer
    .form-footer-section
      .cass-padding-box-5
        button.form-text-button(type='button', tabindex='4', (click)='signUp()')
          span Создать аккаунт
    .form-footer-section
      .form-footer-item
        .cass-padding-box-5
          button.form-text-button(type='button', tabindex='5', (click)='close()')
            span Закрыть
          button.form-button.form-button-primary(type='submit', tabindex='3')
            span Войти