article.component.component-auth-sign-up
  form.form((ngSubmit)='submit()', (keyup.escape)='close()', #form="ngForm")
    cass-form-progress-lock(*ngIf="status.isLoading()")
    header.form-header
      h1 Регистрация
    .cass-padding-box-10
      .input-group
        label.form-label
          span.label-text E-mail:
          input.form-input(
            type='email',
            placeholder='Адрес электронного ящика',
            autocomplete='off', autofocus='autofocus',
            tabindex='1',
            [ngModelOptions]="{standalone: true}", [(ngModel)]='model.email',
            #emailInput
          )
      .input-group
        label.form-label
          span.label-text Пароль
          input.form-input(
            type='password',
            placeholder='**********',
            autocomplete='off',
            tabindex='2',
            required,
            minlength='6',
            maxlength='32',
            [ngModelOptions]="{standalone: true}", [(ngModel)]='model.password',
          )
      .input-group
        label.form-label
          span.label-text Повторите пароль
          input.form-input(
            type='password',
            placeholder='**********',
            autocomplete='off',
            tabindex='3',
            required,
            minlength='6',
            maxlength='32',
            [ngModelOptions]="{standalone: true}", [(ngModel)]='model.repeat',
          )
    footer.form-footer
      .form-footer-section
        .cass-padding-box-5
          cass-form-button(styles="text", type='button', title="НАЗАД", tabindex='4',(click)='back()')
      .form-footer-section
        .form-footer-item
          .cass-padding-box-5
            cass-form-button(styles="text", type='button', title="ЗАКРЫТЬ", tabindex='5',(click)='close()')
            cass-form-button(styles="solid",color="#2196F3", type='submit', title="ЗАРЕГИСТРИРОВАТЬСЯ", tabindex='3',[disabled]="!(isSubmitAvailable)()")
