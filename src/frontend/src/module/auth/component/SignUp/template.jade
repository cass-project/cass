article.component.component-auth-sign-up
  form.form((ngSubmit)='submit()', (keyup.escape)='close()', #form="ngForm")
    cass-form-progress-lock(*ngIf="status.isLoading()")
    header.form-header
      h1 Регистрация
    .cass-padding-box-10
      .input-group
        label.form-label
          span.label-text E-mail:
          cass-form-input(type="email", placeholder="Адрес электронного ящика",#input ,tabindex='1',[(value)]="model.email",autocomplete='off')
      .input-group
        label.form-label
          span.label-text Пароль
          cass-form-input(type="password", placeholder="**********",#input ,tabindex='2',[(value)]="model.password",autocomplete='off',required="true",minlength='6',maxlength='32')
      .input-group
        label.form-label
          span.label-text Повторите пароль
          cass-form-input(type="password", placeholder="**********",#input ,tabindex='3',[(value)]="model.repeat",autocomplete='off',required="true",minlength='6',maxlength='32')
    footer.form-footer
      .form-footer-section
        .cass-padding-box-5
          cass-form-button(styles="text", type='button', title="НАЗАД", tabindex='4',(click)='back()')
      .form-footer-section
        .form-footer-item
          .cass-padding-box-5
            cass-form-button(styles="text", type='button', title="ЗАКРЫТЬ", tabindex='5',(click)='close()')
            cass-form-button(styles="solid",color="#2196F3", type='submit', title="ЗАРЕГИСТРИРОВАТЬСЯ", tabindex='3',[disabled]="!(isSubmitAvailable)()")
