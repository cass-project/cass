div
  .sign-in-modal(*ngIf='service.modals.isSignInModalOpened()')
    cass-modal
      cass-modal-box(width='450px')
        cass-auth-sign-in(
          (sign-up)='service.modals.openSignUpModal()',
          (success)='service.modals.closeModals()',
          (close)='service.modals.closeModals()'
        )
  .sign-up-modal(*ngIf='service.modals.isSignUpModalOpened()')
    cass-modal
      cass-modal-box(width='450px')
        cass-auth-sign-up(
          (success)='service.modals.closeModals()',
          (close)='service.modals.closeModals()',
          (back)='service.modals.openSignInModal()'
        )
