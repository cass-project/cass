article.component.component-profile
  div(*ngIf="isSetupRequired()")
    cass-modal
      cass-modal-box(width="550px")
        cass-profile-setup([profile]="session.getCurrentProfile().entity.profile")
  div(*ngIf="modals.settings.isOpened()")
    cass-modal
      cass-modal-box(width="760px")
        cass-profile-settings((close)='closeModalSettings($event)')
  div(*ngIf="modals.switcher.isOpened()")
    cass-modal
      cass-modal-box(width="360px")
        cass-profile-switcher((close)='closeModalProfileSwitcher($event)')
  div(*ngIf="modals.interests.isOpened()")
    cass-modal
      cass-modal-box(width="550px")
        cass-profile-interests-modal((close)='closeModalInterests($event)', (success)='successModalInteresrs($event)')
  div(*ngIf="modals.createCollection.isOpened()")
    cass-modal
      cass-modal-box(width="550px")
        cass-collection-create-master([for]='"profile"', [for_id]='session.getCurrentProfile().getId()', (close)='closeModalCollectionCreateMaster($event)')