article.component.component-profile-setup-screen-interests
  form.form
    .theme-select
      cass-theme-select([value]='model.interestingIn', (change)="model.setInterestingIn")
    footer.form-footer
      .form-footer-section
        .form-footer-item
          button.form-text-button(type="button", (click)="back()")
            span Назад
      .form-footer-section
        .form-footer-item
          button.form-text-button(type="button", (click)="skip()")
            span Пропустить
        .form-footer-item
          button.form-button.form-button-primary(type="button", (click)="next()")
            span Следующий шаг