article.component.component-profile-setup-screen-image
  form.form
    .profile-modal-tab-image
      .profile-image-form
        .profile-image-container
          cass-profile-image(border='square', [url]='getProfileImage()')
        .profile-image-controls
          button.form-text-button.form-button-text-remove(type="button", (click)='deleteAvatar()')
            i.fa.fa-spinner.fa-pulse.fa-fw(*ngIf="isDeleting")
            i.fa.fa-fw.fa-trash(*ngIf="! isDeleting")
            span Удалить
          button.form-button.form-button-primary(type="button", (click)='uploadProfileImage()')
            i.fa.fa-fw.fa-upload
            span Загрузить другое изображение
      div(*ngIf='upload.isOpened()')
        cass-upload-image-modal((close)='upload.close()', (complete)='complete()')
    footer.form-footer
      .form-footer-section
        .form-footer-item
          button.form-text-button(type="button", (click)="back()")
            span Назад
      .form-footer-section
        .form-footer-item
          button.form-text-button(type="button", (click)="skip()")
            span Пропустить