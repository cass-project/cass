div.component.component-profile-backdrop
  cass-form-progress-lock(*ngIf="isLoading()")
  header.form-header
    h1 {{ "backdrop.change.title" | translate }}
  div.backdrop-form
    cass-change-backdrop-form((submit)='completeChangeImageBackdrop($event)', (changeTextColor)='changeTextColorBackdrop($event)')
  footer.form-footer
    .form-footer-section
      .cass-padding-box-5
        cass-form-button(title="ОТМЕНА",type="button" ,styles="text" ,(click)='close()')
    .form-footer-section
      .form-footer-item
        .cass-padding-box-5
          cass-form-button(title="Сохранить изменения",type="button" ,styles="solid" , color="blue",(click)='save()')

