div.component.component-profile-switcher
  cass-form-progress-lock(*ngIf="status.isLoading()")
  header.profile-switcher-header.form-header
    h1 {{ 'switch-profile' | translate }}
  div.profiles
    div.row
      div.item
        div(*ngIf="  hasProfile(0)")
          cass-profile-card((open)="switchToProfile($event)", [profile]="getProfile(0)", view-mode="grid")
        div(*ngIf="! hasProfile(0)")
          cass-profile-switcher-create-profile-placeholder((create)="createNewProfile()")
      div.item
        div(*ngIf="  hasProfile(1)")
          cass-profile-card((open)="switchToProfile($event)", [profile]="getProfile(1)", view-mode="grid")
        div(*ngIf="! hasProfile(1)")
          cass-profile-switcher-create-profile-placeholder((create)="createNewProfile()")
    div.row
      div.item
        div(*ngIf="  hasProfile(2)")
          cass-profile-card((open)="switchToProfile($event)", [profile]="getProfile(2)", view-mode="grid")
        div(*ngIf="! hasProfile(2)")
          cass-profile-switcher-create-profile-placeholder((create)="createNewProfile()")
      div.item
        div(*ngIf="  hasProfile(3)")
          cass-profile-card((open)="switchToProfile($event)", [profile]="getProfile(3)", view-mode="grid")
        div(*ngIf="! hasProfile(3)")
          cass-profile-switcher-create-profile-placeholder((create)="createNewProfile()")
  footer.form-footer
    .form-footer-section
      .cass-padding-box-5
        cass-form-button(styles="text", type="button", title="ОТМЕНА", (click)="close()")
    .form-footer-section
      .cass-padding-box-5
        cass-form-button(styles="solid", type="button", title="СОЗДАТЬ НОВЫЙ ПРОФИЛЬ", color="#2196F3", [disabled]="! canCreateMoreProfiles()")
