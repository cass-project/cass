div.component.component-profile-card-grid((click)="open()")
  .cover-profile-image(data-index-number="helper.getProfileId()").x-navigation-entity
    .profile-image-container(style="background-image: url('{{ helper.getProfileImageURL() }}');")
  .cover-profile-about
    .profile-name
      h1 {{ helper.getProfileName() }}
    .profile-themes
      ul.themes-list(*ngIf="helper.hasThemes()")
        li(*ngFor="let theme of helper.getThemes()")
          span.title {{ theme.title }}
