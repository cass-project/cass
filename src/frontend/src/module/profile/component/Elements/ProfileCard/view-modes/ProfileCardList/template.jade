div.component.component-profile-card-list
  div.flexbox-container(data-index-number="helper.getProfileId()").x-navigation-entity
    div.profile-image
      a.profile-image-container((click)="open($event)", [routerLink]="['/profile', profile.id]")
        cass-profile-image([url]="helper.getProfileImageURL()", border="square")
    div.profile-info
      h1 {{ helper.getProfileName() }}
    div.profile-themes(*ngIf="helper.hasThemes()")
      ul.themes-list
        li(*ngFor="let theme of helper.getThemes()")
          span.title {{ theme.title }}