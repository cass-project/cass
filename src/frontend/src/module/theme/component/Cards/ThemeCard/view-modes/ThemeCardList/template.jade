div.component.component-theme-card-list-item.x-navigation-entity
  .theme-card-content
    .flexbox-container
      .preview.x-navigation-click((click)="go(theme)")
        .image-container
          .image(style="background-image: url('{{ prefix }}/{{ theme.preview }}')")
      .title((click)="go(theme)")
        span.text {{ theme.title }}
      .description
        .description-title((click)="go(theme)")
          span.text {{ theme.description }}
        .children(*ngIf="hasAnyChildren")
          h6 {{ 'cass.module.theme.children' | translate }}
          ul.children-list
            li(*ngFor="let sub of children")
              a(href="javascript: void(0)", (click)="go(sub)")
                span.link-title {{ sub.title }}