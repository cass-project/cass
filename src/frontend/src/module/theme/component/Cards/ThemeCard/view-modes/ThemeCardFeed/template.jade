div.component.component-theme-card-feed.x-navigation-entity
  .card.x-navigation-click
    .theme-card-content
      .image-container((click)="go()")
        .image(style="background-image: url('{{prefix}}/{{ theme.preview }}')")
      .about
        h1 {{ theme.title }}
        p {{ theme.description }}
        .subscribe-button
          cass-subscribe-button(
          [subscribed]="isSubscribed",
          [is-loading]="subscribeLoading.isLoading()",
          (subscribe)="subscribe()",
          (unsubscribe)="unsubscribe()")