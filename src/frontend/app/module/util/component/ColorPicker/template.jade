.color-picker
  ul.palette-list
    // Отсутствует выбор цвета
    li.palette
      button.palette-button.palette-button-none(type='button')
        i.fa.fa-ban
    // Отсутствует выбор цвета - active
    li.palette
      button.palette-button.palette-button-none.palette-button-none-active(type='button')
        i.fa.fa-ban
    // Список цветов
    li.palette(*ngFor='#palette of palettes')
      button.palette-button(
        type='button',
        [ngClass]="{'palette-button-inactive': true}",
        [style.background-color]='palette.background.hexCode',
        [style.border-color]='palette.border.hexCode'
      )
    // Выбран цвет
    li.palette
      button.palette-button(
        type='button',
        [ngClass]="{'palette-button-inactive': false}",
        [style.background-color]='palettes[0].background.hexCode',
        [style.border-color]='palettes[0].border.hexCode'
      )