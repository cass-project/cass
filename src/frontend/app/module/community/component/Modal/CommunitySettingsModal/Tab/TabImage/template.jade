.cass-padding-box-15
  header.tab-modal-header
    h1 Изображение
  .community-image-form
    .community-image-container
      cass-image-cropper(*ngIf='cropper.file', (cropInit)="onChange()", (cropEnd)="onChange()")
      cass-community-image(*ngIf='!cropper.file', border="square", url="/dist/assets/profile-demo.png" /*url="{{model.image.variants[64].public_path}}"*/)
    .community-image-controls
      button.form-text-button.form-button-text-remove
        i.fa.fa-fw.fa-trash
        span Удалить
      button.form-text-button.form-button-text-remove(disabled)
        i.fa.fa-spinner.fa-pulse.fa-fw
        span Удалить

      label(for="CommunityImageUpload")
        .form-button.form-button-primary
          i.fa.fa-fw.fa-upload
          span Загрузить другое изображение

      input#CommunityImageUpload(style='display:none', type='file', (change)='onSelect($event)')

